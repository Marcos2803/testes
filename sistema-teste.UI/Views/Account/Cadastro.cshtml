@model CadastroViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
        </div>
        <div class="col-sm-6">
            <form class="row g-3" asp-controller="Account" asp-action="Cadastro" method="post">
                <div class="col-md-12">
                    <label for="NomeCompleto" asp-for="NomeCompleto" class="form-label">Nome Completo</label>
                    <input type="text" class="form-control" asp-for="NomeCompleto">
                </div>
                <div class="col-md-12">
                    <label for="Email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>
                <div class="col-6">
                    <label for="Passwoord" class="form-label">Senha</label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>
                <div class="col-6">
                    <label for="PasswoordConfirm" class="form-label">Confirma a Senha</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirmn">
                </div>
                <div class="col-12">
                    <label for="Cpf" class="form-label">Cpf</label>
                    <input type="text" class="form-control Cpf" asp-for="Cpf">
                </div>
                <div class="col-12">
                    <label for="Celular" class="form-label">Celular</label>
                    <input type="int" class="form-control Celular" asp-for="Celular">
                </div>
                <div class="col-12">
                    <label for="DataNascimento" class="form-label">Data De Nascimento</label>
                    <input type="int" class="form-control Nascimento" asp-for="DataNacimento">
                </div>
                <div class="col-md-12">
                    <label>Genero</label>
                    <select asp-for="Genero" class="form-select">
                        <option selected>Genero</option>
                        <option value="1">Masculino</option>
                        <option value="2">Feminino</option>
                    </select>
                </div>
                <div class="col-12">
                    <label for="Cep" class="form-label">Cep</label>
                    <input type="int" class="form-control Cep" asp-for="Cep">
                </div>
                <div class="col-12">
                    <label for="Endereco" class="form-label">Endereço</label>
                    <input type="text"  class="form-control" asp-for="Endereco">
                </div>
                <div class="col-md-12">
                    <label for="Bairro" class="form-label">Bairro</label>
                    <input type="text"  class="form-control" asp-for="Bairro">
                </div>
                <div class="col-md-12">
                    <label for="Numero" class="form-label">Numero</label>
                    <input type="int"  class="form-control" asp-for="Numero">
                </div>
                <div class="col-md-12">
                    <label for="Cidade" class="form-label">Cidade</label>
                    <input type="text"  class="form-control" asp-for="Cidade">
                </div>
                <div class="col-md-12">
                    <label for="Estado" class="form-label">Estado</label>
                    <input type="text" class="form-control" asp-for="Estado">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
