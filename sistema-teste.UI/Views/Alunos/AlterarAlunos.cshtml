@model AlunosEdicaoViewModel
@{
    ViewData["Title"] = "AlterarAlunos";
}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AlterarAlunos" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Nome Completo</label>
                    <input type="text" asp-for="NomeCompleto" class="form-control" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Data Inicio</label>
                    <input type="text" asp-for="DataInicio" class="form-control" />
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Data Final</label>
                    <input type="text" asp-for="DataFim" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Tipo de Plano</label>
                    <select asp-for="TipoPlanoId" class="form-select" asp-items="@ViewBag.TipoPlano">
                        <option selected value="0">Selecione o Plano</option>
                    </select>
                    <span asp-validation-for="TipoPlanoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TipoPagamentoId" class="control-label">Tipo de pagamento</label>
                    <select asp-for="TipoPagamentoId" class="form-select" asp-items="@ViewBag.TipoPagamentoPc">
                        <option selected value="0">Selecione o Pagamento</option>
                    </select>
                    <span asp-validation-for="TipoPagamentoId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Alterar</button>
                </div>


            </form>
        </div>
    </div>
</div>